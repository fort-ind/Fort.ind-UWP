<Page
    x:Class="Fort.ind_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fort.ind_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <AcrylicBrush x:Key="NavigationViewExpandedPaneBackground"
                      BackgroundSource="HostBackdrop"
                      TintColor="{ThemeResource SystemChromeMediumColor}"
                      TintOpacity="0.8"
                      FallbackColor="{ThemeResource SystemChromeMediumColor}"/>
    </Page.Resources>

    <muxc:NavigationView x:Name="NavView"
                         PaneDisplayMode="LeftCompact"
                         CompactModeThresholdWidth="0"
                         ExpandedModeThresholdWidth="0"
                         OpenPaneLength="256"
                         IsBackButtonVisible="Collapsed"
                         IsSettingsVisible="True"
                         ItemInvoked="NavView_ItemInvoked"
                         Loaded="NavView_Loaded">

        <muxc:NavigationView.MenuItems>
            <muxc:NavigationViewItem Content="Home" Tag="LatestNews">
                <muxc:NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Home"/>
                </muxc:NavigationViewItem.Icon>
            </muxc:NavigationViewItem>
            <muxc:NavigationViewItem Content="Games" Tag="Games">
                <muxc:NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Play"/>
                </muxc:NavigationViewItem.Icon>
            </muxc:NavigationViewItem>
            <muxc:NavigationViewItem Content="doo dads" Tag="Betas">
                <muxc:NavigationViewItem.Icon>
                    <SymbolIcon Symbol="PreviewLink"/>
                </muxc:NavigationViewItem.Icon>
            </muxc:NavigationViewItem>
            <muxc:NavigationViewItem Content="Your Profile (wip)" Tag="Contacts">
                <muxc:NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Contact"/>
                </muxc:NavigationViewItem.Icon>
            </muxc:NavigationViewItem>
            <muxc:NavigationViewItem Content="Social" Tag="Social">
                <muxc:NavigationViewItem.Icon>
                    <SymbolIcon Symbol="People"/>
                </muxc:NavigationViewItem.Icon>
            </muxc:NavigationViewItem>
            <muxc:NavigationViewItem Content="About" Tag="About">
                <muxc:NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Help"/>
                </muxc:NavigationViewItem.Icon>
            </muxc:NavigationViewItem>
        </muxc:NavigationView.MenuItems>

        <!-- Content Area -->
        <ScrollViewer>
            <StackPanel x:Name="ContentPanel" Padding="20">
                <!-- Latest News Content (default view) -->
                <StackPanel x:Name="LatestNewsPanel" Visibility="Visible">
                    <TextBlock Text="uhhh brick :3"
                               FontSize="32"
                               FontWeight="Bold"
                               Margin="0,0,0,10" SelectionChanged="TextBlock_SelectionChanged"/>

                    <TextBlock Text="yey 🎉"
                               FontSize="18"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="I HATE UWP I HATE IT I HATE ITTTTTTTTT WHY IS ThIS SO HARD IM GONNA DIEEEE"
                               TextWrapping="Wrap" 
                               FontSize="16"/>
                </StackPanel>

                <!-- Games Content -->
                <StackPanel x:Name="GamesPanel" Visibility="Collapsed">
                    <TextBlock Text="Games"
                               FontSize="32"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="nothing here.. go to https://www.fort1nd.com instead"
                               FontSize="18"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Betas Content -->
                <StackPanel x:Name="BetasPanel" Visibility="Collapsed">
                    <TextBlock Text="Betas"
                               FontSize="32"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Access beta versions for nothing (for now)"
                               FontSize="18"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Contacts Content -->
                <StackPanel x:Name="ContactsPanel" Visibility="Collapsed">
                    <TextBlock Text="Contacts"
                               FontSize="32"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="wip"
                               FontSize="18"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Social Content -->
                <StackPanel x:Name="SocialPanel" Visibility="Collapsed">
                    <TextBlock Text="Social"
                               FontSize="32"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="check back here soon :3"
                               FontSize="18"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <!-- About Content -->
                <StackPanel x:Name="AboutPanel" Visibility="Collapsed">
                    <TextBlock Text="about fort.desktop (UWP)"
                               FontSize="32"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="0.1 beta :p"
                               FontSize="18"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Settings Content -->
                <StackPanel x:Name="SettingsPanel" Visibility="Collapsed">
                    <TextBlock Text="Settings"
                               FontSize="32"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Configure."
                               FontSize="18"
                               TextWrapping="Wrap"/>
                    <Button x:Name="AboutButton" Content="About this app" Click="AboutButton_Click" Margin="0,20,0,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

    </muxc:NavigationView>
</Page>
