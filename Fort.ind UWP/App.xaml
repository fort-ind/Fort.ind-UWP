<Application
    x:Class="Fort.ind_UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fort.ind_UWP">

    <Application.Resources>
        <ResourceDictionary>
            <!-- Windows 10 Style Acrylic Background Brush - reduced opacity for better transparency -->
            <AcrylicBrush x:Key="AppAcrylicBackgroundBrush"
                          BackgroundSource="HostBackdrop"
                          TintColor="{ThemeResource SystemChromeMediumLowColor}"
                          TintOpacity="0.5"
                          FallbackColor="{ThemeResource SystemChromeMediumLowColor}"/>

            <!-- NavigationView Acrylic Pane Background - lighter for better see-through -->
            <AcrylicBrush x:Key="NavigationViewExpandedPaneBackground"
                          BackgroundSource="HostBackdrop"
                          TintColor="{ThemeResource SystemChromeMediumColor}"
                          TintOpacity="0.65"
                          FallbackColor="{ThemeResource SystemChromeMediumColor}"/>

            <!-- Reveal Highlight NavigationViewItem Style Override -->
            <SolidColorBrush x:Key="NavigationViewItemForeground" Color="{ThemeResource SystemBaseHighColor}"/>
            <SolidColorBrush x:Key="NavigationViewItemForegroundPointerOver" Color="{ThemeResource SystemBaseHighColor}"/>
            <SolidColorBrush x:Key="NavigationViewItemForegroundSelected" Color="{ThemeResource SystemAccentColor}"/>
            <SolidColorBrush x:Key="NavigationViewItemForegroundSelectedPointerOver" Color="{ThemeResource SystemAccentColor}"/>

        </ResourceDictionary>
    </Application.Resources>

</Application>
